{
  "manifest_version": 3,
  "name": "Essenca",
  "version": "1.1.0",
  "description": "Essenca is an AI-powered chatbot that helps you understand any webpage with summaries and insights, featuring a specialized LinkedIn comment generator.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://essenca-admin.vercel.app/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.a4f.co/*"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "options_page": "src/ui/settings/options.html",
  "action": {
    "default_title": "Essenca",
    "default_popup": "src/ui/popup.html",
    "default_icon": {
      "48": "assets/icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/styles/styles.css"
      ],
      "js": [
        "src/scripts/content.js"
      ]
    },
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "css": [
        "src/features/linkedin feature/style.css"
      ],
      "js": [
        "src/features/linkedin feature/content.js"
      ]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/styles/styles.css",
        "assets/Essenca_logo.png",
        "assets/Essenca_logo_light.png",
        "assets/css/*",
        "assets/webfonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}